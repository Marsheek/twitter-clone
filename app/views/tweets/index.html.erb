<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table class="table">
  <!-- table is a bootstrap class -->
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="4"></th>

      <!-- Change 3 to 4 to add an extra column which we just created by adding upvote link Marshall -->
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= tweet.user.email %></td>
        <td><%= link_to 'upvote', like_tweet_path(tweet), method: :put%></td>
        <td><%= link_to 'downvote', dislike_tweet_path(tweet), method: :put%></td>
        <td><%= tweet.score %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
